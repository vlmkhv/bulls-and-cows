<test>
    
    <test-case id="start">
        <q>/start</q>
        <a state = "/Start"/>
    </test-case>
    
    <test-case id="rules">
        <q>/start</q>
        <a state = "/Start"/>
        <q>Правила</q>
        <a state = "/Rules"/>
    </test-case>
    
    <test-case>
        <q>/start</q>
        <a state = "/Start"/>
        <context var="session">
            {
                "secret": "1234"
            }
        </context>    
        <q>0123</q>
        <a state = "/NoMatch"/>
        <q>123</q>
        <a>Число слишком короткое!</a>
        <a state = "/NoMatch"/>
        <q>12345</q>
        <a>Число слишком длинное!</a>
        <a state = "/NoMatch"/>
        <q>1221</q>
        <a>Цифры повторяются!</a>
        <a state = "/NoMatch"/>
        <q>abcd</q>
        <a state = "/NoMatch"/>
        <q>5678</q>
        <a>0 быков, 0 коров</a>
        <q>9021</q>
        <a>0 быков, 2 коровы</a>
        <q>4321</q>
        <a>0 быков, 4 коровы</a>
        <q>1423</q>
        <a>1 бык, 3 коровы</a>
        <q>1324</q>
        <a>2 быка, 2 коровы</a>
        <q>1235</q>
        <a>3 быка, 0 коров</a>
        <q>1234</q>
        <a>Ты угадал за 6 ходов!</a>
        <a state = "/Start"/>
    </test-case>
    
    <test-case id="give up 0">
        <q>/start</q>
        <a state = "/Start"/>
        <q>Сдаться</q>
        <a state = "/GiveUp"/>
        <a state = "/Start"/>
    </test-case>
    
    <test-case id="give up 1">
        <q>/start</q>
        <a state = "/Start"/>
        <context var="session">
            {
                "secret": "1234"
            }
        </context>
        <q>5678</q>
        <a>0 быков, 0 коров</a>
        <q>Сдаться</q>
        <a state = "/GiveUp"/>
        <a state = "/Start"/>
    </test-case>
    
</test>