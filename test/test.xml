        <q>4321</q>
        <a>Быки: 0, коровы: 4</a>
        <q>1423</q>
        <a>Быки: 1, коровы: 3</a>
        <q>1324</q>
        <a>Быки: 2, коровы: 2</a>
        <q>1235</q>
        <a>Быки: 3, коровы: 0</a>
